<div class="indiv-page-title-container">
  <div class="indiv-page-title">
    <h1>Visited Places</h1>
  </div>
</div>

  <div class="visited-container-list">
    <% @visited.each do |item| %>
      <div class="visited-item">
        <%if item.city.photo_loc %>
          <img class="location-image" src="<%=item.city.photo_loc%>" />
        <%else%>
          <img class="location-image" src="./images/empty.jpg" />
        <%end%>
        <h3 class="item-text"><%=item.city.name%> - <%= item.city.country.name %></h3>
        <form method="post" action="/not-visited-city/<%=item.id%>">
          <input name="visited"  type="submit" value="Not Visited">
        </form>
        <form method="get" action="/upload_image/<%=item.id%>">
          <input name="upload"  type="submit" value="Upload">
        </form>
      </div>
    <% end %>
  </div>
