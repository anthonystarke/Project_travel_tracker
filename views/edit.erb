<form method="get" action="/home">
  <button type="submit">Home</button>
</form>

<h1> Edit Location Details</h1>

<p>
  <%= @item.city.name %>
</p>
<p>
  <%= @item.city.country.name %>
</p>

<form method="post" action='/save-changes/<%=@item.id%>'>
  <label for="save-changes">Country Name</label>
  <input
  type="text"
  name="country_name"
  id="country_name"
  value=<%=@item.city.country.name%>
  />
  <label for="save-changes">City Name</label>
  <input
  type="text"
  name="city_name"
  id="city_name"
  value=<%=@item.city.name %>
  />
  <input type="submit" value="Save Changes">
</form>
