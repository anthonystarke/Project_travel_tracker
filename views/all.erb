
<h1>List of All Destinations</h1>

<h2>List of all Cities</h2>

<div class="grid-container-list">
  <% @all_locations.each do |item| %>
    <div class="item-list">
      <h3 class="item-text">
        <%= item.city.name %>
        <%if item.visited == "t" %>
        -- Visited
        <%else%>
        -- Not Visited
        <%end%>
      </h3>

      <%if item.visited == "f" %>
        <form method="post" action="/visited-city/<%=item.id%>">
          <input name="visited"  type="submit" value="Visited">
        </form>
      <%else%>
        <form method="post" action="/not-visited-city/<%=item.id%>">
          <input name="visited"  type="submit" value="Not Visited">
        </form>
      <% end %>
      <form method="get" action="/edit-city/<%=item.id%>">
        <input name="visited"  type="submit" value="Edit">
      </form>

      <form method="post" action="/delete/<%=item.id%>">
        <input name="visited"  type="submit" value="Delete">
      </form>
    </div>
  <% end %>
</div>

<h2>List of all countries</h2>
<div class="grid-container-list">
  <% @all_locations.each do |item| %>
    <div class="item-list">
      <h3 class="item-text">
        <%= item.city.country.name %>
        <%if item.visited == "t" %>
        -- Visited
        <%else%>
        -- Not Visited
        <%end%>
      </h3>

      <form method="get" action="/edit-country/<%=item.id%>">
        <input name="visited"  type="submit" value="Edit">
      </form>
    </div>
    <% end %>
  </div>
